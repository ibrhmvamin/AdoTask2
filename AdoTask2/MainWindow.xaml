<Window x:Class="AdoTask2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoTask2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox x:Name="txtBox" Width="350" Text="Search By Name"
                         HorizontalContentAlignment="Left" Foreground="Gray"/>
                <Button Height="35" x:Name="searchBtn" Width="80" Content="Search"  Click="searchBtn_Click" Margin="10"/>
                <Button Height="35" Width="80" x:Name="updateBtn" Margin="20 0 0 0" Content="update"  Click="updateBtn_Click"/>

            </StackPanel>
            <DataGrid AutoGenerateColumns="True" x:Name="dataGridView"/>
        </StackPanel>
    </Grid>
</Window>
